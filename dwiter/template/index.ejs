<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dwitter</title>
</head>

<body style="width: 70%; margin: 0 auto;">
  <h1>Dwitter </h1>
  <ul>
    <li><a href="/dwitter">ALL Dwitter</a></li>
    <li><a href="#">MY Dwitter</a></li>
    <li><a href="#">Login</a></li>
  </ul>

  <form action="/dwitter" name="contentForm" method="post" style="border: 2px solid gray;">
    <input type="text" name="id" placeholder="id">
    <input type="text" name="name" placeholder="name"><br>
    <input type="text" name="content" placeholder="content" style="width: 70%;">
    <button type="submit">Post</button>
  </form>
  <% renderList.forEach(dwitter=>{ %>
    <div style="border: 1px solid gray; margin-top: 10px;">
        <span style="float: right; cursor: pointer;" onclick="remove('<%= dwitter.pid %>')">삭제</span>
        <span style="float: right; cursor: pointer;" onclick="updateToggle('<%= dwitter.pid %>')">편집&nbsp;&nbsp;</span>
        <img style="width: 70px; height: 70px; object-fit: cover;"
          src="https://i.natgeofe.com/n/4f5aaece-3300-41a4-b2a8-ed2708a0a27c/domestic-dog_thumb_3x2.jpg" alt="">
        <span>[<%= dwitter.name %>]</span>
        <span><a href="/dwitter/<%= dwitter.id %>">@<%= dwitter.id %></a></span>
        <span>
          <%= dwitter.date %>
        </span>
        <div>
          <%= dwitter.content %>
        </div>

        <div id="updateForm_<%= dwitter.pid %>" style="display: none;">
          <input type="text" id="content_<%= dwitter.pid %>" style="width: 80%;  background-color: #eee;">
          <button type="button" onclick="update('<%= dwitter.pid %>')">Updata</button>
        </div>

    </div>
    <% }) %>

      <script>
        let updateToggle = pid => {
          const updateForm = document.querySelector("#updateForm_" + pid);
          const contentText = document.querySelector("#content_" + pid);
          const display = updateForm.style.display
          if (display === 'none') {
            updateForm.style.display = 'block'
            contentText.focus()
          } else {
            updateForm.style.display = 'none'
            contentText.value = ''
          }
        }

        let update = pid => {
          const updateText = document.querySelector("#content_" + pid).value;

          fetch('/dwitter',
            {
              method: 'put',
              headers: { 'content-type': 'application/json' },
              body: JSON.stringify({ pid: pid, content: updateText })
            })
            .then((result) => {
              if (result.status === 204) {
                window.location.reload();
              }
            })
            .catch(console.error)
        }

        let remove = pid => {
          fetch('/dwitter',
            {
              method: 'delete',
              headers: { 'content-type': 'application/json' },
              body: JSON.stringify({ pid: pid })
            })
            .then((result) => {
              if (result.status === 204) {
                window.location.reload();
              }
            })
            .catch(console.error)
        }
      </script>

</body>

</html>